@model Blog
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">

            <form asp-area="Admin" asp-controller="Blog" asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="@Model.BlogImageFile" class="form-label">Image</label>
                    <input class="form-control" asp-for="@Model.BlogImageFile">
                    <span asp-validation-for="@Model.BlogImageFile" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Title" class="form-label">Title</label>
                    <input class="form-control" asp-for="@Model.Title">
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.CategoryId" class="form-label">Category</label>
                    <select class="form-control " aria-label="Default select example" asp-for="@Model.CategoryId">
                        <option selected>Select category</option>
                        @foreach (var item in ViewBag.Category)
                        {
                            <option value="@item.Id">@item.Name</option>

                        }
                    </select>
                    <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.TagToBlogsId" class="form-label">Tags</label>
                    <select class="form-control selectTwo" aria-label="Default select example" multiple="multiple" asp-for="@Model.TagToBlogsId">
                        <option selected>Select category</option>
                        @foreach (var item in ViewBag.BlogTags)
                        {
                            <option value="@item.Id">@item.Name</option>

                        }
                    </select>
                    <span asp-validation-for="@Model.TagToBlogsId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Content" class="form-label">Content</label>
                    <textarea id="editor" class="form-control" asp-for="@Model.Content" rows="3"></textarea>
                    <span asp-validation-for="@Model.Content" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-area="Admin" asp-controller="Blog" asp-action="Index" class="btn btn-primary">Back to list</a>
            </form>
        </div>
    </div>
</div>

